<Window x:Class="P1_FileHandling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P1_FileHandling"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <StackPanel>
        <Label FontWeight="Bold">Enter multiple lines of text</Label>
        <TextBox x:Name="mulTxt" TextWrapping="Wrap" Margin="10,0,10,0" AcceptsReturn="True" TextChanged="mulTxt_TextChanged"></TextBox>
        <Button x:Name="saveTxt" Click="saveTxt_Click" Width="150" Margin="10,10,0,0">Save</Button>
        <Button x:Name="DispalyTxt" Click="DispalyTxt_Click" Width="150" Margin="10,10,0,0">Display</Button>
        <Label Content="File Contents:" FontWeight="Bold"/>
        <TextBlock x:Name="txtOutput" Width="300" Height="100" TextWrapping="Wrap"/>
        
    </StackPanel>
</Window>
